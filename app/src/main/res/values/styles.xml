<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="statusText">
        <item name="android:textSize">@dimen/tinyFont</item>
        <item name="android:typeface">monospace</item>
        <item name="android:color">@color/lightgrey</item>
        <item name="android:padding">@dimen/smallPadding</item>
    </style>

    <style name="speedOutLabel">
        <item name="android:layout_marginBottom">@dimen/outPadding</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="displayValue">
        <item name="android:textSize">@dimen/normalFont</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="speedValue">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
