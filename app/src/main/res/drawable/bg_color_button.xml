<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <corners android:radius="@dimen/colorButtonCorners" />
                    <solid android:color="#0fff"/>
                </shape>
            </item>
            <item
                android:left="@dimen/colorButtonSelectedOffset"
                android:top="@dimen/colorButtonSelectedOffset"
                android:right="@dimen/colorButtonSelectedOffset"
                android:bottom="@dimen/colorButtonSelectedOffset">
                <shape android:shape="rectangle" >
                    <corners android:radius="@dimen/colorButtonCorners" />
                    <solid android:color="#000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/colorButtonCorners" />
            <solid android:color="#fff"/>
        </shape>
    </item>

</selector>